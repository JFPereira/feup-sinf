@section ExtraStyles {
    <!-- Morris Charts CSS -->
    @Styles.Render("~/Content/sb-admin-2/bower_components/morrisjs/morris.css")

    <!-- DataTables CSS -->
    @Styles.Render("~/Content/sb-admin-2/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css")

    <!-- DataTables Responsive CSS -->
    @Styles.Render("~/Content/sb-admin-2/bower_components/datatables-responsive/css/dataTables.responsive.css")

    <!-- Morris Charts CSS -->
    @Styles.Render("~/Content/sb-admin-2/bower_components/morrisjs/morris.css")

    <!-- Our Styles -->
    @Styles.Render("~/Content/css/main-dash.css")
}

@section ExtraScripts {
    <!-- Flot Charts JavaScript -->
    @Scripts.Render("~/Content/sb-admin-2/bower_components/flot/excanvas.min.js")
    @Scripts.Render("~/Content/sb-admin-2/bower_components/flot/jquery.flot.js")
    @Scripts.Render("~/Content/sb-admin-2/bower_components/flot/jquery.flot.pie.js")
    @Scripts.Render("~/Content/sb-admin-2/bower_components/flot/jquery.flot.resize.js")
    @Scripts.Render("~/Content/sb-admin-2/bower_components/flot/jquery.flot.time.js")
    @Scripts.Render("~/Content/sb-admin-2/bower_components/flot.tooltip/js/jquery.flot.tooltip.min.js")

    <!-- DataTables JavaScript -->
    @Scripts.Render("~/Content/sb-admin-2/bower_components/datatables/media/js/jquery.dataTables.min.js")
    @Scripts.Render("~/Content/sb-admin-2/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js")

    <!-- Morris Charts JavaScript -->
    @Scripts.Render("~/Content/sb-admin-2/bower_components/raphael/raphael-min.js")
    @Scripts.Render("~/Content/sb-admin-2/bower_components/morrisjs/morris.min.js")

    <!-- Our Scripts -->
    @Scripts.Render("~/Scripts/sales/RSS-table.js")
    @Scripts.Render("~/Scripts/sales/sales-booking-morris.js") 
    @Scripts.Render("~/Scripts/sales/top-purchases-table.js")
}


    <div class="col-xs-12">
        <h1>Sales Dash</h1>
        <hr>
        <div>
            <input id="year" type="hidden" name="year" value=@Html.ViewData["year"]>
            <input id="month" type="hidden" name="month" value=@Html.ViewData["month"]>
            <input id="day" type="hidden" name="day" value=@Html.ViewData["day"]>
        </div>
        <div class="col-xs-12 col-md-12 col-lg-7">
            <div class="panel panel-default">
                @if (@Html.ViewData["year"] == null) 
                { 
                    <div class="panel-heading"> Regional Sales Status @Html.ViewData["year"] @Html.ViewData["month"] @Html.ViewData["day"]</div>
                }
                else if (@Html.ViewData["month"] == null)
                {
                    <div class="panel-heading"> Regional Sales Status of @Html.ViewData["year"]</div>
                }
                else if (@Html.ViewData["day"] == null)
                {
                    <div class="panel-heading"> Regional Sales Status of @Html.ViewData["month"] @Html.ViewData["year"]</div>
                }
                else
                {
                    <div class="panel-heading"> Regional Sales Status of @Html.ViewData["day"] @Html.ViewData["month"] @Html.ViewData["year"]</div>
                }

                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table id="salesrss" class="table table-bordered table-hover table-striped" width="auto"></table>
                    </div>
                </div>

                <a href="#">
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-xs-12 col-md-12 col-lg-7">
            <div class="panel panel-default">
                @if (@Html.ViewData["year"] == null)
                {
                    <div class="panel-heading"> Top Purchases </div>
                }
                else if (@Html.ViewData["month"] == null)
                {
                    <div class="panel-heading"> Top Purchases of @Html.ViewData["year"]</div>
                }
                else if (@Html.ViewData["day"] == null)
                {
                    <div class="panel-heading"> Top Purchases of @Html.ViewData["month"] @Html.ViewData["year"]</div>
                }
                else
                {
                    <div class="panel-heading"> Top Purchases of @Html.ViewData["day"] @Html.ViewData["month"] @Html.ViewData["year"]</div>
                }

                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table id="top-purchases" class="table table-bordered table-hover table-striped" width="auto"></table>
                    </div>
                </div>

                <a href="#">
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-xs-12 col-md-12 col-lg-12">
            <div class="panel panel-default">
               @if (@Html.ViewData["year"] == null)
               {
                    <div class="panel-heading"> Sales Booking </div>
               }
               else if (@Html.ViewData["month"] == null)
               {
                    <div class="panel-heading"> Sales Booking of @Html.ViewData["year"]</div>
               }
               else if (@Html.ViewData["day"] == null)
               {
                    <div class="panel-heading"> Sales Booking of @Html.ViewData["month"] @Html.ViewData["year"]</div>
               }
               else
               {
                    <div class="panel-heading"> Sales Booking of @Html.ViewData["day"] @Html.ViewData["month"] @Html.ViewData["year"]</div>
               }

                <div class="panel-body">
                    <div id="salesbooking"></div>
                </div>

                <a href="#">
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>

    </div>
